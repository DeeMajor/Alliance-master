@model IEnumerable<Accommodation.Models.Room>

@{
    ViewBag.Title = "RoomBooking";
    Layout = "~/Views/Shared/_Client.cshtml";
}
<br />
<h2 align="center"style="margin-bottom:0px;">Room Booking</h2>

@{foreach (var x in Model.Select(n => n.RoomTypes.Type).Distinct())
    {
   

        @*<h3>Room Type :@x</h3>
        <br />
        <div>
            <table class="table">
                <div class="w3-container">*@
        <div class="featured-properties content-area-14">
            <div class="container" style="margin-top:-130px;">
                <!-- Main title -->
                <div class="main-title" style="margin-top:0px;">
                    <h3>Room Type :@x</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod</p>
                </div>
                <div class="row">
                    @foreach (var item in Model.Where(a => a.RoomTypes.Type.Equals(@x)))
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="property-box">
                                <div class="property-thumbnail">
                                    <a href="properties-details.html" class="property-img">
                                        <div class="tag">@x</div>
                                        @*<div class="price-box"><span>$850.00</span> month</div>*@
                                        <img class="d-block w-100" src="data:image/png;base64,@Convert.ToBase64String(item.RoomPicture, 0, item.RoomPicture.Length)" style="width: 300px; height: 200px" alt="" />
                                    </a>
                                </div>
                                <div class="detail">
                                    <h1 class="title">
                                        <a href="#">@Html.DisplayFor(modelItem => item.RoomPrice)</a>
                                    </h1>
                                  
                                    <ul class=" clearfix">
                                        <li>
                                            <h6><b>Room Number: </b><span> @Html.DisplayFor(modelItem => item.RoomNumber)</span></h6>
                                        </li>
                                        <li>
                                            <h6><b>No. Of People: </b><span> @Html.DisplayFor(modelItem => item.NoOfPeople)</span></h6>
                                        </li>
                                    </ul>
                                    <p>@Html.DisplayFor(modelItem => item.roomDescription)</p>
                                    <div class="row">
                                        <div class="col-5">
                                            @Html.ActionLink("Book Room", "Create", "RoomBookings", new { id = item.RoomId }, new { @class = "btn btn-info" })

                                        </div>
                                        <div class="col-3">
                                            @Html.ActionLink("Make Appointment", "Create", "Appointments", new { id = item.BuildingId }, new { @class = "btn btn-success" })

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    
            }
}
      
